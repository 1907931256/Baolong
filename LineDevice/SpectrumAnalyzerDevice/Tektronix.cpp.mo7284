{
    Write(SET_MAX_HOLD_MODE,"Ascii");
    usleep(delay * 1000);
}

/**
 * @brief 清除模式
 */
void Tektronix::ClearMode()
{
    Write(SET_CLEAR_WRITE_MODE,"Ascii");
    usleep(delay * 1000);
}

