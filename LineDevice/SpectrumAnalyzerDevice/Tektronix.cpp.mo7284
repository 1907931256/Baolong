void Tektronix::MarkTop()
{
    Write(SET_MARK_TOP,"Ascii");
    usleep(delay * 1000);
}

/**
 * @brief 定Mark1在次峰值上
 */
void Tektronix::MarkNext()
{
    Write(SET_MARK_NEXT_TOP,"Ascii");
